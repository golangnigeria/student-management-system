package components

import "github.com/stackninja.pro/goth/internals/models"

templ ProfileDetails(td *models.TemplateData) {
	<div class="flex flex-col md:flex-row gap-6 w-full">
		<!-- Profile Info Section -->
		<div class="flex-1">
			@ProfileInformation(td)
		</div>

		<!-- Quick Actions Section -->
		<div class="w-full md:w-1/3">
			@QuickActions()
		</div>
	</div>
}
